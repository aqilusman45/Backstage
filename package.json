{
  "name": "backstage",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "generate:component": "npx hygen component with-prompt",
    "generate:section": "npx hygen section with-prompt",
    "format": "prettier --write --ignore-path .prettierignore .",
    "check": "prettier --check \"**/*.{ts,tsx,js,jsx,md,mdx,css,yaml,yml}\"",
    "lint:fix": "npm run format && npm run lint -- --fix",
    "prepare": "husky",
    "tsc": "tsc --noEmit"
  },
  "dependencies": {
    "classnames": "^2.5.1",
    "next": "15.2.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "sass": "^1.85.1",
    "scss": "^0.2.4"
  },
  "lint-staged": {
    "*": "npm run lint:fix"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "eslint": "^9",
    "eslint-config-next": "15.2.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "prettier": "^3.5.3",
    "tailwindcss": "^4",
    "typescript": "^5.8.2"
  }
}
